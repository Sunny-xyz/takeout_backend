<h1>Restaurant Recommendations</h1>

<%= form_with url: recommendations_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :preferences, "Enter your preferences (comma separated):" %><br>
    <%= form.text_field :preferences, placeholder: "e.g., indian, delivery" %>
  </div>
  <div>
    <%= form.submit "Get Recommendations" %>
  </div>
<% end %>

<% if @recommendations.present? %>
  <h2>Recommendations:</h2>
  <ul>
    <% @recommendations.each do |recommendation| %>
      <li><%= recommendation %></li>
    <% end %>
  </ul>
<% end %>
